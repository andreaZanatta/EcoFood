<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Colore di sfondo -->
    <solid android:color="#FFFFFF" />

    <!-- Bordo arrotondato -->
    <corners android:radius="8dp" />

    <!-- Bordo visibile -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Margini interni -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
