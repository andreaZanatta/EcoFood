<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="16dp"
    android:id="@+id/seller_edit_add_product_modal">


    <!-- Product Name -->
    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alexandria_light"
        android:hint="Product Name"
        android:inputType="text"
        android:padding="6dp"
        android:background="@drawable/searchbar"
        android:layout_marginBottom="10dp"/>

    <!-- Product Category -->
    <EditText
        android:id="@+id/product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alexandria_light"
        android:hint="Category"
        android:inputType="text"
        android:background="@drawable/searchbar"
        android:padding="6dp"
        android:layout_marginBottom="10dp"/>

    <!-- Product Price -->
    <EditText
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alexandria_light"
        android:hint="Price"
        android:background="@drawable/searchbar"
        android:padding="6dp"
        android:inputType="number"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alexandria_light"
        android:hint="Description"
        android:inputType="text"
        android:background="@drawable/searchbar"
        android:padding="6dp" />

    <RelativeLayout
        android:id="@+id/upload_photo_of_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/searchbar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/upload_photo_text_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="inserisci la tua foto!"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="@font/alexandria_light"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="90dp"/>

        <ImageButton
            android:id="@+id/upload_photo_button_customer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/upload"
            android:contentDescription="uploadPhoto" />
    </RelativeLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/alexandria_light"
        android:textSize="16sp"
        app:backgroundTint="@null"
        android:text="Aggiungi Prodotti!" />
</LinearLayout>